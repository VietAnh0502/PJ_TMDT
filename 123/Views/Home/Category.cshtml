@{
    ViewData["Title"] = ViewData["Title"] ?? "Danh mục sản phẩm";
}
  	<link rel="stylesheet"  href="/css/category.css" />
<div class= "category">
<div class="banner-slider">
			<div class="slides">
				<div class="slide"><img src="/images/slide1.png" alt="Slide 1"></div>
				<div class="slide"><img src="/images/slide2.png" alt="Slide 2"></div>
				<div class="slide"><img src="/images/slide3.png" alt="Slide 3"></div>
				<div class="slide"><img src="/images/slide4.png" alt="Slide 4"></div>
				<div class="slide"><img src="/images/slide5.png" alt="Slide 5"></div>
			</div>
			<div class="dots"></div>
			<script src="/js/bannerSlider.js"></script>
		</div>
<p>Danh sách sản phẩm cho danh mục: @ViewData["Title"]</p>
    <!-- Mỗi sản phẩm sẽ được hiển thị trong 1 card -->
    <div class="product-list" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <div class="product_box_content" data-id="@product.ProductId" style="border: 1px solid #ddd; padding: 20px; border-radius: 10px; background-color: #fff;">
                    <!-- Link bao quanh ảnh -->
                    <a href="/product/details/@product.Slug" style="display: block; text-align: center;">
                        <div class="wrapper_image_feature">
                            <img src="@product.Image" alt="@product.Name" style="width: 100%; height: auto; border-radius: 10px;" />
                        </div>
                    </a>

                    <!-- Tên sản phẩm và giá -->
                    <a href="/product/details/@product.Slug" class="product_box_content_text" style="text-decoration: none; color: #333; display: block; text-align: center; margin-top: 10px;">
                        <h3 class="product_name" style="font-size: 16px; font-weight: bold;">@product.Name</h3>
                        <p class="product_price" style="font-size: 16px; color: #f00; margin: 5px 0;">
                            <span class="woocommerce-Price-amount amount">
                                <bdi>@product.Price.ToString("N0")&nbsp;<span class="woocommerce-Price-currencySymbol">₫</span></bdi>
                            </span>
                            @if (product.OriginalPrice > product.Price)
                            {
                                <span class="product_regular_price" style="text-decoration: line-through; color: #999; margin-left: 10px;">
                                    <span class="woocommerce-Price-amount amount">
                                        <bdi>@product.OriginalPrice.ToString("N0")&nbsp;<span class="woocommerce-Price-currencySymbol">₫</span></bdi>
                                    </span>
                                </span>
                            }
                        </p>
                    </a>

                    <!-- Icon yêu thích -->
                    <div class="icon_favorite" style="position: absolute; top: 10px; right: 10px;">
                        <img src="/images/wishlist-heart.svg" alt="icon heart" style="width: 24px; height: 24px;" />
                    </div>
                </div>
            }
        }
        else
        {
            <p>Hiện không có sản phẩm nào trong danh mục này.</p>
        }
    </div>
